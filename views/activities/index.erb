<h1>Activities</h1>

<table>
  <% for activity in @activities %>
    <tr>
      <td><%= activity.name %></td>
      <td><%= activity.day %></td>
      <td><%= activity.start_time %>-<%= activity.end_time %></td>
      <td>Capacity: <%= activity.capacity %></td>
      <td><a class="btn-small" href="/gym/activities/<%= activity.id %>">View details</a></td>
      <% if activity.full? %>
        <td class="message">FULL</td>
      <% end %>
    </tr>
  <% end %>
</table>
<br>
<a class="btn" href="/gym/activities/new">Add a new activity</a>
