<h1>Add a new activity</h1>
<form class="" action="/gym/activities" method="post">

  <div class="form-el">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name">
  </div>

  <div class="form-el">
    <label for="day-select">Select day:</label>
    <select class="" name="day" id="day-select">
      <option value="Monday">Monday</option>
      <option value="Tuesday">Tuesday</option>
      <option value="Wednesday">Wednesday</option>
      <option value="Thursday">Thursday</option>
      <option value="Friday">Friday</option>
      <option value="Saturday">Saturday</option>
      <option value="Sunday">Sunday</option>
    </select>
  </div>

  <div class="form-el">
    <label for="start-time">Start time:</label>
    <input class="short" type="text" name="start_time" id="start-time">
  </div>

  <div class="form-el">
    <label for="end-time">End time:</label>
    <input class="short" type="text" name="end_time" id="end-time">
  </div>

    <input class="btn" type="submit" value="Add activity">

</form>
