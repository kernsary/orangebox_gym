<h1>Activity details</h1>
<p>Name: <%= @activity.name() %></p>
<p>Day: <%= @activity.day() %></p>
<p>Start time: <%= @activity.start_time() %></p>
<p>End time: <%= @activity.end_time() %></p>

<a href="/gym/activities/<%= @activity.id() %>/edit">Edit details</a>
<br>
<br>

<form class="" action="/gym/activities/<%= @activity.id() %>/delete" method="post">
  <input type="submit" value="Delete activity">
</form>

<br>
<h2>Participants</h2>
<% if @activity.bookings == [] %>
  <p>No participants for this activity</p>
<% else %>
  <% @activity.bookings.each do |booking| %>
  <p><%= booking.member.first_name() %> <%= booking.member.last_name() %>, <%= booking.member.address() %></p>
  <form class="" action="/gym/activities/<%= booking.id %>/booking_delete" method="post">
  <input type="submit" value="Remove participant">
 </form>
<hr>
<% end %>
<% end %>
<br>
<a href="/gym/activities/<%= @activity.id %>/booking_new">Add participant</a>
